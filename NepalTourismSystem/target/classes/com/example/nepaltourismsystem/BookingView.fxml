<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.nepaltourismsystem.controller.BookingController"
            prefWidth="900" prefHeight="600">

    <!-- Title -->
    <top>
        <Label text="Manage Bookings"
               style="-fx-font-size: 24px; -fx-text-fill: #6a1b9a;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- Center content -->
    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <ComboBox fx:id="langBox" promptText="Select a language">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="English"/>
                        <String fx:value="Nepali"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <!-- Table -->
            <TableView fx:id="bookingTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="touristColumn" text="Tourist Name" prefWidth="140"/>
                    <TableColumn fx:id="guideColumn" text="Guide Name" prefWidth="140"/>
                    <TableColumn fx:id="attractionColumn" text="Attraction" prefWidth="140"/>
                    <TableColumn fx:id="dateColumn" text="Start Date" prefWidth="100"/>
                    <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="100"/>
                    <TableColumn fx:id="costColumn" text="Cost" prefWidth="100"/>
                </columns>
            </TableView>

            <!-- Form inputs -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints prefWidth="250"/>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints prefWidth="250"/>
                </columnConstraints>

                <Label fx:id="touristLabel" text="Tourist:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="touristComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Select Tourist"/>

                <Label fx:id="guideLabel" text="Guide:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="guideComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Select Guide"/>

                <Label fx:id="attractionLabel" text="Attraction:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="attractionComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Select Attraction"/>

                <!-- Start and End Date side by side -->
                <Label fx:id="startDateLabel" text="Start Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="datePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label fx:id="endDateLabel" text="End Date:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <DatePicker fx:id="endDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

                <Label fx:id="costLabel" text="Cost:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="costField" promptText="Enter cost" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Buttons -->
            <HBox spacing="12" alignment="CENTER">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>
                <Button fx:id="addButton" styleClass="menu-button"/>
                <Button fx:id="updateButton"  styleClass="menu-button"/>
                <Button fx:id="deleteButton"  styleClass="menu-button"/>
                <Button fx:id="clearButton"  styleClass="menu-button"/>
            </HBox>

            <Button fx:id="menuButton" onAction="#returnMain" styleClass="return-menu-button" mnemonicParsing="false" text="Menu"/>
        </VBox>
    </center>
</BorderPane>
