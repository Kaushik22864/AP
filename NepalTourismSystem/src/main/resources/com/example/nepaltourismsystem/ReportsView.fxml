<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.nepaltourismsystem.controller.ReportsController"
            prefWidth="900" prefHeight="600">

    <!-- Top Header -->
    <top>
        <Label text="Reports and Analytics"
               style="-fx-font-size: 26px; -fx-text-fill: #1e88e5; -fx-padding: 20;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- Center -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="10" right="30" bottom="20" left="30"/>
            </padding>

            <!-- Stats Grid -->
            <GridPane hgap="25" vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <Label fx:id="totalTouristsLabel" text="Total Tourists: 0"
                       style="-fx-font-size: 16px; -fx-background-color: #4fc3f7; -fx-text-fill: white; -fx-padding: 15; -fx-background-radius: 10;"
                       GridPane.columnIndex="0"/>
                <Label fx:id="totalGuidesLabel" text="Total Guides: 0"
                       style="-fx-font-size: 16px; -fx-background-color: #81c784; -fx-text-fill: white; -fx-padding: 15; -fx-background-radius: 10;"
                       GridPane.columnIndex="1"/>
                <Label fx:id="totalAttractionsLabel" text="Total Attractions: 0"
                       style="-fx-font-size: 16px; -fx-background-color: #ffb74d; -fx-text-fill: white; -fx-padding: 15; -fx-background-radius: 10;"
                       GridPane.columnIndex="2"/>
                <Label fx:id="totalBookingsLabel" text="Total Bookings: 0"
                       style="-fx-font-size: 16px; -fx-background-color: #ba68c8; -fx-text-fill: white; -fx-padding: 15; -fx-background-radius: 10;"
                       GridPane.columnIndex="3"/>
            </GridPane>

            <!-- Pie Chart -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="Booking Distribution by Attraction"
                       style="-fx-font-size: 18px; -fx-text-fill: #333;"/>
                <PieChart fx:id="bookingPieChart" prefHeight="300" prefWidth="500"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
