<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.nepaltourismsystem.controller.EmergencyContactController"
            prefWidth="900" prefHeight="600">

    <top>
        <Label text="Emergency Contacts"
               style="-fx-font-size: 20px; -fx-text-fill: #1a237e;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <TableView fx:id="contactTable">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Tourist Name" prefWidth="250"/>
                    <TableColumn fx:id="emergencyColumn" text="Emergency Contact" prefWidth="250"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="menuButton" onAction="#returnMain" styleClass="return-menu-button" mnemonicParsing="false" text="Menu" />
        </HBox>
    </bottom>
</BorderPane>
